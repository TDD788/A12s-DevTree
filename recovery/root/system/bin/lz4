#!/system/bin/sh

function show_function_guide {
    case $1 in
        -1) echo "Fast compression (default)";;
        -12) echo "Slowest compression level";;
        -T#) echo "Use # threads for compression (default: 0 == auto)";;
        -d) echo "Decompression (default for .lz4 extension)";;
        -f) echo "Overwrite output without prompting";;
        -k) echo "Preserve source files(s)  (default)";;
        --rm) echo "Remove source file(s) after successful de/compression";;
        -V) echo "Display Version number and exit";;
        -v) echo "Verbose mode";;
        -q) echo "Suppress warnings; specify twice to suppress errors too";;
        -c) echo "Force write to standard output, even if it is the console";;
        -t) echo "Test compressed file integrity";;
        -m) echo "Multiple input files (implies automatic output filenames)";;
        -r) echo "Operate recursively on directories (sets also -m)";;
        -l) echo "Compress using Legacy format (Linux kernel compression)";;
        -z) echo "Force compression";;
        -D) echo "Use FILE as dictionary (compression & decompression)";;
        -B#) echo "Cut file into blocks of size # bytes [32+] or predefined block size [4-7] (default: 7)";;
        -BI) echo "Block Independence (default)";;
        -BD) echo "Block dependency (improves compression ratio)";;
        -BX) echo "Enable block checksum (default:disabled)";;
        --no-frame-crc) echo "Disable stream checksum (default:enabled)";;
        --content-size) echo "Compressed frame includes original size (default:not present)";;
        --list) echo "Lists information about .lz4 files (useful for files compressed with --content-size flag)";;
        --sparse) echo "Sparse mode (default:enabled on file, disabled on stdout)";;
        --favor-decSpeed) echo "Favor decompression speed (compressed files decompress faster, but are less compressed)";;
        --fast[=#]) echo "Switch to ultra fast compression level (default: 1)";;
        --best) echo "Same as -12";;
        -b#) echo "Benchmark file(s), using # compression level (default : 1)";;
        -e#) echo "Test all compression levels from -bX to # (default : 1)";;
        -i#) echo "Minimum evaluation time in seconds (default : 3s)";;
        *)
            echo "Unknown option '$1'"
            exit 1
            ;;
    esac
}

if [ $# -eq 0 ]; then
    echo "*** lz4 v1.9.5 64-bit multithread, by Yann Collet ***
Usage :
      lz4 [arg] [input] [output]

input   : a filename
          with no FILE, or when FILE is - or stdin, read standard input
Arguments :
 -1     : fast compression (default)
 -12    : slowest compression level
 -T#    : use # threads for compression (default:0==auto)
 -d     : decompression (default for .lz4 extension)
 -f     : overwrite output without prompting
 -k     : preserve source files(s)  (default)
--rm    : remove source file(s) after successful de/compression
 -h/-H  : display help/long help and exit

Advanced arguments :
 -V     : display Version number and exit
 -v     : verbose mode
 -q     : suppress warnings; specify twice to suppress errors too
 -c     : force write to standard output, even if it is the console
 -t     : test compressed file integrity
 -m     : multiple input files (implies automatic output filenames)
 -r     : operate recursively on directories (sets also -m)
 -l     : compress using Legacy format (Linux kernel compression)
 -z     : force compression
 -D FILE: use FILE as dictionary (compression & decompression)
 -B#    : cut file into blocks of size # bytes [32+]
          or predefined block size [4-7] (default: 7)
 -BI    : Block Independence (default)
 -BD    : Block dependency (improves compression ratio)
 -BX    : enable block checksum (default:disabled)
--no-frame-crc : disable stream checksum (default:enabled)
--content-size : compressed frame includes original size (default:not present)
--list FILE : lists information about .lz4 files (useful for files compressed with --content-size flag)
--[no-]sparse  : sparse mode (default:enabled on file, disabled on stdout)
--favor-decSpeed: compressed files decompress faster, but are less compressed
--fast[=#]: switch to ultra fast compression level (default: 1)
--best  : same as -12

Benchmark arguments :
 -b#    : benchmark file(s), using # compression level (default : 1)
 -e#    : test all compression levels from -bX to # (default : 1)
 -i#    : minimum evaluation time in seconds (default : 3s)
"
    exit 1
fi

case $1 in
    -h | -H | --help | --HELP)
        lz4.bin --help
        exit 0
        ;;
    *)
        show_function_guide $1
        ;;
esac

if [ $# -eq 1 ]; then
    echo "Please specify additional arguments for function $1."
    exit 1
fi

lz4.bin "$@"